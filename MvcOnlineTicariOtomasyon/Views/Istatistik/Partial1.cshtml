@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup2>

<body>
   
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Departman Personel Sayıları</h3>

                <div class="card-tools">

                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Departman</th>
                            <th>Progress Bar</th>
                            <th style="width: 40px">Sayı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int siraNo = 0;}
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@{siraNo++;} @siraNo</td>
                                <td>@x.Departman</td>
                                <td>
                                    @if (x.Sayi == 1)
                                    {
                                        <div class="progress progress-xs  ">
                                            <div class="progress-bar bg-danger" style="width: 55%"></div>
                                        </div>
                                    }
                                    @if (x.Sayi == 2)
                                    {
                                        <div class="progress progress-xs  ">
                                            <div class="progress-bar bg-warning" style="width: 70%"></div>
                                        </div>
                                    }
                                    @if (x.Sayi == 3)
                                    {
                                        <div class="progress progress-xs progress-striped active  ">
                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                        </div>
                                    }
                                    @if (x.Sayi == 4)
                                    {
                                        <div class="progress progress-xs progress-striped active  ">
                                            <div class="progress-bar bg-primary" style="width: 90%"></div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (x.Sayi == 1)
                                    {
                                        <span class="badge bg-danger text-white">@x.Sayi</span>
                                    }
                                    @if (x.Sayi == 2)
                                    {
                                        <span class="badge bg-warning text-white">@x.Sayi</span>
                                    }
                                    @if (x.Sayi == 3)
                                    {
                                        <span class="badge bg-success text-white">@x.Sayi</span>
                                    }
                                    @if (x.Sayi == 4)
                                    {
                                        <span class="badge bg-primary text-white">@x.Sayi</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
   

</body>