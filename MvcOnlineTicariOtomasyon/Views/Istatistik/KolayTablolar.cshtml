@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup>
@{
    ViewBag.Title = "KolayTablolar";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Hızlı Bakış Tabloları</h1>
                    </div>

                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Kategori Detay Tablosu</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Kategori Adı</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Oran</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1.</td>
                                            <td>Beyaz Eşya</td>
                                            <td>
                                                <div class="progress progress-xs ">
                                                    <div class="progress-bar bg-danger" style="width: 55%"></div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-danger text-white">55%</span></td>
                                        </tr>
                                        <tr>
                                            <td>2.</td>
                                            <td>Küçük Ev Aletleri </td>
                                            <td>
                                                <div class="progress progress-xs ">
                                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-warning text-white">70%</span></td>
                                        </tr>
                                        <tr>
                                            <td>3.</td>
                                            <td>Bilgisayar </td>
                                            <td>
                                                <div class="progress progress-xs progress-striped active ">
                                                    <div class="progress-bar bg-primary" style="width: 30%"></div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-primary text-white">30%</span></td>
                                        </tr>
                                        <tr>
                                            <td>4.</td>
                                            <td>Mobilya</td>
                                            <td>
                                                <div class="progress progress-xs progress-striped active ">
                                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-success text-white">90%</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        @Html.Action("Partial1", "Istatistik")
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Müşteri Şehir Tablosu</h3>

                                <div class="card-tools">

                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Şehir</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Sayı</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int siraNo = 0;}
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@{siraNo++;} @siraNo</td>
                                                <td>@x.Sehir</td>
                                                <td>
                                                    @if (x.Sayi >= 0 && x.Sayi <= 3)
                                                    {
                                                        <div class="progress progress-xs  ">
                                                            <div class="progress-bar bg-danger" style="width: 25%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi >= 4 && x.Sayi <= 7)
                                                    {
                                                        <div class="progress progress-xs  ">
                                                            <div class="progress-bar bg-warning" style="width: 40%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi >= 8 && x.Sayi <= 11)
                                                    {
                                                        <div class="progress progress-xs progress-striped active  ">
                                                            <div class="progress-bar bg-success" style="width: 60%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi >= 12)
                                                    {
                                                        <div class="progress progress-xs progress-striped active  ">
                                                            <div class="progress-bar bg-primary" style="width: 80%"></div>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    @if (x.Sayi >= 0 && x.Sayi <= 3)
                                                    {
                                                <span class="badge bg-danger text-white">@x.Sayi</span>}
                                                    @if (x.Sayi >= 4 && x.Sayi <= 7)
                                                    {
                                                <span class="badge bg-warning text-white">@x.Sayi</span>}
                                                    @if (x.Sayi >= 8 && x.Sayi <= 11)
                                                    {
                                                <span class="badge bg-success text-white">@x.Sayi</span>}
                                                    @if (x.Sayi >= 12)
                                                    {
                                                <span class="badge bg-primary text-white">@x.Sayi</span>}
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->

                    @Html.Action("Partial4","Istatistik")
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                @Html.Action("Partial2", "Istatistik")
                <!-- /.row -->
                @Html.Action("Partial3", "Istatistik")
                <!-- /.row -->
            
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>


</body>


