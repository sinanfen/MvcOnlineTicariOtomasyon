@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{ ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml"; }

<body>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="mt-0 header-title">Cari Bilgileri</h4>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Cari Adı : @ViewBag.cari </li>
                    </ol>
                    <table class="table table-hover">
                        <tr class="table-active">
                            <th>Satış Id</th>
                            <th>Ürün</th>
                            <th>Personel</th>
                            <th>Cari</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Fiyat</th>
                            <th>Tarih</th>
                            <th>Yazdır</th>
                        </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SatisId</td>
                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                            <td>@item.Adet</td>
                            <td>@item.Fiyat ₺</td>
                            <td>@item.ToplamTutar ₺</td>
                            <td>@item.Tarih</td>
                            <td><a href="#" class="btn btn-warning">Yazdır</a></td>
                        </tr>
                    }
                    </table>
                </div>
            </div><!--end card-body-->
        </div>
    </div>

</body>
