@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{ ViewBag.Title = "YeniKalem";
   Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<body>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="mt-0 header-title">Yeni Kalem Bilgileri</h4>
                    <form class="form-group" method="post">
                        @Html.Label("Açıklama")
                        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                        <br />
                        @Html.Label("Miktar")
                        @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
                        <br />
                        @Html.Label("Birim Fiyat")
                        @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
                        <br />
                        @Html.Label("Tutar")
                        @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
                        <br />
                        @Html.Label("Fatura Id")
                        @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
                        <br />
                        <button class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div>
    </div>
</body>
