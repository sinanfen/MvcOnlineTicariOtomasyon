@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<body>
    <br />
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="card">
                <div class="card-body table-responsive">
                    <h5 class="header-title">Satış Listesi</h5>
                    <table id="datatable" class="table table-bordered table-hover" style="margin-top:20px;">
                        <thead>
                            <tr class="table-active">
                                <th>ID</th>
                                <th>Ürün</th>
                                <th>Cari </th>
                                <th>Personel</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Toplam Tutar</th>
                                <th>Tarih</th>
                                <th class="text-center">Güncelle</th>
                                <th class="text-center">Detaylar</th>
                            </tr>
                        </thead>
                        @foreach (var k in Model)
                        {
                            <tr>
                                <td>@k.SatisId</td>
                                <td>@k.Urun.UrunAd</td>
                                <td>@k.Cari.CariAd @k.Cari.CariSoyad</td>
                                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                                <td>@k.Adet</td>
                                <td>@k.Fiyat ₺</td>
                                <td>@k.ToplamTutar ₺</td>
                                <td>@k.Tarih</td>
                                <td width="15%" align="center"><a href="/Satis/SatisGetir/@k.SatisId" class="btn btn-warning">Güncelle</a></td>
                                <td width="15%" align="center"><a href="/Satis/SatisDetay/@k.SatisId" class="btn btn-success">Detaylar</a></td>
                            </tr>
                        }
                    </table>
                    <a href="/Satis/YeniSatis/" class="btn btn-primary">Yeni Satış Yap</a>
                </div>
            </div>
        </div>
    </div>
</body>